@page "/search"

@attribute [Authorize]

<PageTitle>Search</PageTitle>
<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenText Text="Search" TextStyle="TextStyle.H3" TagName="TagName.H1" />
    </RadzenColumn>
</RadzenRow>
<RadzenTextBox @bind-Value=searchText Style="width: 967px"></RadzenTextBox>
<RadzenButton Style="width: 162px; height: 38px" Text="Search" Click="@SearchButton"></RadzenButton>

<RadzenCheckBoxList @bind-Value=@Values TValue="int" Change=@(args => Values = args)>
    <Items>
        <RadzenCheckBoxListItem Value="1" Text="DFM"></RadzenCheckBoxListItem>
        <RadzenCheckBoxListItem Value="2" Text="ICM"></RadzenCheckBoxListItem>
        <RadzenCheckBoxListItem Value="3" Text="Azure DevOps Work Items"></RadzenCheckBoxListItem>
        <RadzenCheckBoxListItem Value="4" Text="Azure DevOps Wiki"></RadzenCheckBoxListItem>
        <RadzenCheckBoxListItem Value="5" Text="AVA?"></RadzenCheckBoxListItem>
        <RadzenCheckBoxListItem Value="6" Text="OUTLOOK?"></RadzenCheckBoxListItem>
    </Items>
</RadzenCheckBoxList>

